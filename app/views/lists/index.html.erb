<% title "Lists" %>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <% for list in @lists %>
    <tr>
      <td><%= list.name %></td>
      <td><%= link_to "Show", list %></td>
      <td><%= link_to "Edit", edit_list_path(list) %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New List", new_list_path %></p>
